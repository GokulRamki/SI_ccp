@model SI_ccp.Models.tbl_company_info

@{
    ViewBag.Title = "Profile";
}



@if (TempData["successmsg"] != null)
{
    <div class="alert alert-success fade in">
        <button class="close" data-dismiss="alert">
            ×
        </button>
        <i class="fa-fw fa fa-check"></i>
        <strong>Success</strong> @TempData["successmsg"].
    </div>
}

<section id="widget-grid" style="margin: 0px auto;">
    <!-- START ROW -->
    <div class="row">

        <!-- NEW COL START -->
        <article class="col-sm-12 col-md-12 col-lg-6" style="float: none; margin: 5px auto;">

            <!-- Widget ID (each widget will need unique ID)-->
            <div class="jarviswidget" id="wid-id-3" data-widget-editbutton="false" data-widget-custombutton="false">

                <header>
                    <span class="widget-icon"><i class="fa fa-edit"></i></span>
                    <h2>Profile Information </h2>

                </header>

                <!-- widget div-->
                <div>

                    <!-- widget edit box -->
                    <div class="jarviswidget-editbox">
                        <!-- This area used as dropdown edit box -->

                    </div>
                    <!-- end widget edit box -->
                    <!-- widget content -->
                    <div class="widget-body no-padding">
                        @using (Html.BeginForm("profile", "Company", FormMethod.Post, new { enctype = "multipart/form-data", id = "form-update_company", @class = "smart-form" }))
                        {
                            @Html.ValidationSummary(true)

                            @Html.HiddenFor(model => model.id)
                            @Html.HiddenFor(m => m.created_on)
                            @Html.HiddenFor(m => m.isdeleted)
                            @Html.HiddenFor(m => m.credit_amount)
                            @Html.HiddenFor(m => m.min_trans_amount)
                            @Html.HiddenFor(m => m.max_trans_amount)
                            @Html.HiddenFor(m => m.email)
                            @Html.HiddenFor(model => model.id)
                            @Html.HiddenFor(model => model.company_name)
                            @Html.HiddenFor(m => m.is_import_topup)
                            @Html.HiddenFor(m => m.isactive)
                            @Html.HiddenFor(m => m.contract_exp_date)
                            @Html.HiddenFor(m => m.min_mthly_spend)

                            <header>
                                Profile Information
                            </header>
                            <fieldset>
                                <section>
                                    <label class="input">
                                        @Html.DisplayFor(model => model.company_name)
                                        @Html.ValidationMessageFor(model => model.company_name)
                                    </label>
                                </section>

                                <div class="row">
                                    <section class="col col-6">
                                        <b>Available Credit Amount:</b>
                                    </section>
                                    <section class="col col-6">
                                        <b>$ &nbsp;@Html.DisplayFor(model => model.credit_amount)</b>
                                    </section>
                                </div>
                                <div class="row">
                                    <section class="col col-6">
                                        <b>Min Transaction Amount:</b>

                                    </section>
                                    <section class="col col-6">
                                        <b>$ &nbsp;@Html.DisplayFor(model => model.min_trans_amount)</b>
                                    </section>
                                </div>
                                <div class="row">
                                    <section class="col col-6">
                                        <b>Max Transaction Amount:</b>

                                    </section>
                                    <section class="col col-6">
                                        <b>$ &nbsp;@Html.DisplayFor(model => model.max_trans_amount)</b>
                                    </section>
                                </div>
                                <div class="row">
                                    <section class="col col-6">
                                        <label class="input">
                                            @Html.DisplayFor(model => model.email)
                                            @Html.ValidationMessageFor(model => model.email)
                                        </label>
                                    </section>
                                    <section class="col col-6">
                                        <label class="label">Password</label>
                                        <label class="input">
                                            @Html.PasswordFor(model => model.password, new { Value = Model.password, placeholder = "Password", maxlength = 50 })
                                            @Html.ValidationMessageFor(model => model.password)
                                        </label>
                                    </section>
                                </div>

                                <div class="row">

                                    <section class="col col-6">
                                        <label class="label">Contact Person Name</label>
                                        <label class="input">
                                            <i class="icon-append fa fa-user"></i>
                                            @Html.TextBoxFor(model => model.contact_person_name, new { placeholder = "Contact Person Name", maxlength = 20 })
                                            @Html.ValidationMessageFor(model => model.contact_person_name)
                                            <span id="email-msg" style="display: block; margin-top: 6px; padding: 0 1px; font-style: normal; font-size: 11px; line-height: 15px; color: #D56161;"></span>
                                        </label>
                                    </section>


                                </div>
                                <div class="row">
                                    <section class="col col-6">
                                        <label class="label">Phone Number</label>
                                        <label class="input">
                                            <i class="icon-append fa fa-phone"></i>
                                            @Html.TextBoxFor(model => model.phone_number, new { placeholder = "Phone Number", maxlength = 10, @onkeypress = "return isNumber(event)" })
                                        </label>
                                    </section>
                                    <section class="col col-6">
                                        <label class="label">Mobile Number</label>
                                        <label class="input">
                                            @Html.TextBoxFor(model => model.mobile_number, new { placeholder = "Mobile Number", maxlength = 10, @onkeypress = "return isNumber(event)" })
                                            @Html.ValidationMessageFor(model => model.mobile_number)
                                        </label>
                                    </section>

                                </div>
                                <section>
                                    <label class="label">Address Line 1</label>
                                    <label for="address1" class="input">
                                        @Html.TextBoxFor(model => model.address1, new { placeholder = "Address Line 1", maxlength = 150 })
                                        @Html.ValidationMessageFor(model => model.address1)
                                    </label>
                                </section>

                                <section>
                                    <label class="label">Address Line 2</label>
                                    <label for="address2" class="input">
                                        @Html.TextBoxFor(model => model.address2, new { placeholder = "Address Line 2", maxlength = 150 })
                                    </label>
                                </section>

                                <div class="row">
                                    <section class="col col-6">
                                        <label class="label">City</label>
                                        <label class="input">
                                            @Html.TextBoxFor(model => model.city, new { placeholder = "City", maxlength = 20 })
                                            @Html.ValidationMessageFor(model => model.city)
                                        </label>
                                    </section>
                                    <section class="col col-6">
                                        <label class="label">&nbsp;</label>
                                        <label class="input">
                                            <b>Country:</b>   SI
                                            @Html.HiddenFor(model => model.country, new { Value = "SI", maxlength = 30 })
                                        </label>
                                    </section>
                                </div>


                                @*<div class="row">

                                        <section class="col col-6">
                                            <label><b>Status</b></label>
                                        </section>
                                        <section class="col col-6">
                                            <div class="inline-group">
                                                <label class="radio">
                                                    @Html.RadioButtonFor(model => model.isactive, true, new { @checked = "checked" })
                                                    <i></i>active
                                                </label>
                                                <label class="radio" style="margin-top: 10px;">
                                                    @Html.RadioButtonFor(model => model.isactive, false, new { })
                                                    <i></i>inactive
                                                </label>
                                            </div>
                                        </section>

                                    </div>*@

                            </fieldset>

                            <footer>
                                <button type="submit" class="btn btn-primary" id="btnSubmit">
                                    Submit
                                </button>
                            </footer>
                        }
                    </div>
                    <!-- end widget content -->

                </div>
                <!-- end widget div -->

            </div>
            <!-- end widget -->
        </article>
        <!-- END COL -->
    </div>

    <!-- END ROW -->


</section>
@section Scripts{
    <script>
        function isNumber(evt) {
            evt = (evt) ? evt : window.event;
            var charCode = (evt.which) ? evt.which : evt.keyCode;
            if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                return false;
            }
            return true;
        }
    </script>
}
