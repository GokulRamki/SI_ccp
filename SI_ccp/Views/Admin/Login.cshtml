@model SI_ccp.Models.admin_login_model
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en-us">
<head>
    <meta charset="utf-8">
    <!--<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">-->

    <title>SI-CCP::Admin </title>
    <meta name="description" content="">
    <meta name="author" content="">

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/SmartAdmin/css")

    <link href="@Url.Content("~/css/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/font-awesome.min.css")" rel="stylesheet" />
    @*<link href="@Url.Content("~/css/font-style.css")" rel="stylesheet" />*@

</head>

<body id="login" class="animated fadeInDown">

    <header id="header" style="height:100px;">
        <!--<span id="logo"></span>-->

        <div id="logo-group">
            <span id="logo">
                <img src="@Url.Content("~/Images/bmobilelogo.png")" style="width:145px;" alt="BmobileAdmin">
            </span>

            <!-- END AJAX-DROPDOWN -->
        </div>
    </header>

    <div id="main" role="main">

        <!-- MAIN CONTENT -->
        <div id="content" class="container">

            <div class="row">
                @if (ViewBag.Msg != null)
                {
                    <div class="alert alert-warning fade in">
                        <button class="close" data-dismiss="alert">
                            ×
                        </button>
                        <i class="fa-fw fa fa-warning"></i>
                        <strong>Warning</strong> @ViewBag.Msg.
                    </div>
                }
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4"></div>
                <div class="col-xs-12 col-sm-12 col-md-8 col-lg-5">
                    <div class="well no-padding">
                        @using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "login-form", @class = "smart-form client-form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <header>
                                <i class="fa fa-user"></i> Sign In
                            </header>
                            <fieldset>

                                <section>
                                    <label class="label">Username</label>
                                    <label class="input">
                                        <i class="icon-append fa fa-user"></i>
                                        @Html.TextBoxFor(model => model.username, new { type = "text", name = "username", placeholder = "Username" })
                                        @Html.ValidationMessageFor(model => model.username)
                                        <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter email address/username</b>
                                    </label>
                                </section>

                                <section>
                                    <label class="label">Password</label>
                                    <label class="input">
                                        <i class="icon-append fa fa-lock"></i>
                                        @Html.PasswordFor(model => model.password, new { type = "password", name = "password", placeholder = "Password" })
                                        @Html.ValidationMessageFor(model => model.password)
                                        <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Enter your password</b>
                                    </label>
                                </section>
                            </fieldset>
                            <footer>
                                <button id="btnSubmit" class="btn btn-mini top_btn" type="submit" style="width: 100px;background:#512C52;color:#fff;">Submit</button>
                            </footer>
                        }

                    </div>
                </div>
            </div>
        </div>

    </div>

    <!--================================================== -->
    <!-- PACE LOADER - turn this on if you want ajax loading to show (caution: uses lots of memory on iDevices)-->
    <script src="@Url.Content("~/js/plugin/pace/pace.min.js")"></script>

    <!-- Link to Google CDN's jQuery + jQueryUI; fall back to local -->
    <script src="@Url.Content("~/js/libs/jquery-2.0.2.min.js")"></script>
    <script src="@Url.Content("~/js/libs/jquery-ui-1.10.3.min.js")"></script>

    <!-- BOOTSTRAP JS -->
    <script src="@Url.Content("~/js/bootstrap/bootstrap.min.js")"></script>
    <!-- CUSTOM NOTIFICATION -->
    <script src="@Url.Content("~/js/notification/SmartNotification.min.js")"></script>
    <!-- JARVIS WIDGETS -->
    <script src="@Url.Content("~/js/smartwidgets/jarvis.widget.min.js")"></script>
    <!-- JQUERY VALIDATE -->
    <script src="@Url.Content("~/js/plugin/jquery-validate/jquery.validate.min.js")"></script>
    <!-- JQUERY MASKED INPUT -->
    <script src="@Url.Content("~/js/plugin/masked-input/jquery.maskedinput.min.js")"></script>
    <!-- browser msie issue fix -->
    <script src="@Url.Content("~/js/plugin/msie-fix/jquery.mb.browser.min.js")"></script>

    <!--[if IE 7]>

            <h1>Your browser is out of date, please update your browser by going to www.microsoft.com/download</h1>

        <![endif]-->
    <!-- MAIN APP JS FILE -->
    <script src="@Url.Content("~/js/app.js")"></script>

    <script type="text/javascript">
        runAllForms();

        $(function () {
            $('#Username').focus();
            // Validation
            $("#login-form").validate({
                // Rules for form validation
                rules: {
                    Username: {
                        required: true,
                    },
                    Pwd: {
                        required: true,
                        //maxlength: 20
                    }
                },

                // Messages for form validation
                messages: {
                    Username: {
                        required: 'Please enter your username',
                    },
                    Pwd: {
                        required: 'Please enter your password'
                    }
                },

                // Do not change code below
                errorPlacement: function (error, element) {
                    error.insertAfter(element.parent());
                }
            });
        });
    </script>

</body>





