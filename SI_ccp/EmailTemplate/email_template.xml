<!-- Send Failed Topup Bundle's Report Email Begin-->
  <SendFailedTopupBundleEmail_Subj>
    Bmobile-Vodafone Customer Topup Failed log for Bundle - #Date#
  </SendFailedTopupBundleEmail_Subj>
  <SendFailedTopupBundleEmail_Body>
    <![CDATA[ 
     Hi Admin,    
     <p>Please refer below for the Failed topup Bundle Details</p>     
      <br><br>
      <table border="1" cellspacing="0" cellpadding="2">
      <tr style="font-weight:bold; background-color:#ddd;">
        <td>Msisdn Number</td> 
        <td>Bundle Id</td>
        <td>Bundle Name</td>       
        <td>Bundle Amount</td>
        <td>Result Code</td>
        <td>Description</td>
        <td>Transaction Date</td>
      </td> 
      #TableRow#
      </table>
    <br><br>
    <p>Thanks, <br>Bmobile-Vodafone Customer Topup</p>
    ]]>
  </SendFailedTopupBundleEmail_Body>
  <SendFailedTopupBundleEmail_Row>
    <![CDATA[     
      <tr>
        <td>#msisdn#</td>
        <td>#BundleId#</td>
        <td>#BundleName#</td>   
        <td>#amount#</td>
        <td>#resultcode#</td>
        <td>#Desc#</td>  
        <td>#transDate#</td>
      </td>      
    ]]>
  </SendFailedTopupBundleEmail_Row>
